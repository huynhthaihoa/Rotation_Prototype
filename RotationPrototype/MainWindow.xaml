        <Border Background="Green" Margin="100,150,100,150" BorderBrush="Silver" BorderThickness="1">
            <Rectangle x:Name="myRect"  Stroke="Beige" Panel.ZIndex="0" Visibility="Visible" RenderTransformOrigin="0.5, 0.5" Grid.Column="1" >
                <Rectangle.Fill>
                    <SolidColorBrush Color="Beige"></SolidColorBrush>
                </Rectangle.Fill>
                <Rectangle.RenderTransform>
                    <RotateTransform x:Name="myRectRotate">
                    </RotateTransform>
                </Rectangle.RenderTransform>
            </Rectangle>
        </Border>

